<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/profile_title">

        <EditTextPreference
            app:key="signature"
            app:title="@string/name_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/display_header">

        <SwitchPreference
            app:title="@string/dark_mode"
            app:key="dark_mode"
            app:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>